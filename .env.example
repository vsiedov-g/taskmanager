# Database Configuration
DATABASE_URL=postgresql://admin:your_password@localhost:5432/taskmanager
POSTGRES_DB=taskmanager
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_ISSUER=TaskManagerAPI
JWT_AUDIENCE=TaskManagerClient
JWT_EXPIRATION_HOURS=24

# Slack Integration
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_USER_TOKEN=xoxp-your-user-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# API Configuration
API_BASE_URL=https://localhost:5001
API_VERSION=v1
CORS_ORIGINS=https://localhost:4200,http://localhost:4200

# Client Configuration
CLIENT_BASE_URL=https://localhost:4200
CLIENT_APP_NAME=Task Manager

# Email Service (Optional)
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM_ADDRESS=noreply@taskmanager.com
EMAIL_FROM_NAME=Task Manager

# Logging
LOG_LEVEL=Information
LOG_FILE_PATH=logs/taskmanager.log

# Redis (Optional - for caching)
REDIS_CONNECTION_STRING=localhost:6379

# Environment
ASPNETCORE_ENVIRONMENT=Development
NODE_ENV=development

# Docker Configuration
COMPOSE_PROJECT_NAME=taskmanager

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection

# File Storage (Optional)
STORAGE_TYPE=local
STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;